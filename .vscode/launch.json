    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "warmup",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/typingwarmup/main.py",
            "console": "integratedTerminal",
            "env": {
                "WARMUP_EX_PATH": "${workspaceFolder}"
            }
        },
        {
            "name": "warmup test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/typingwarmup/main.py",
            "console": "integratedTerminal",
            "env": {
                "WARMUP_EX_PATH": "${workspaceFolder}"
            },
            "args": ["test"]
        },
        {
            "name": "warmup --help",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/typingwarmup/main.py",
            "console": "integratedTerminal",
            "env": {
                "WARMUP_EX_PATH": "${workspaceFolder}"
            },
            "args": ["--help"]
        }
    ]
}